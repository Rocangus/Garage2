@{
    ViewData["Title"] = "Re-park Vehicle";
}

<h4>Park Previously Parked Vehicle Again</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RePark">
            <div class="form-group">
                <div class="form-group">
                    <label id="RegistrationNumberLabel" name="RegistrationNumberLabel" class="control-label"></label>
                    <input id="RegistrationNumber" name="RegistrationNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>